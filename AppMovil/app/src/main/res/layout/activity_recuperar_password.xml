<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_recuperar_password">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="424dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_rectangulo_morado" />

    <TextView
        android:id="@+id/txtOlvidasteContrasena"
        android:layout_width="238dp"
        android:layout_height="96dp"
        android:fontFamily="@font/poppins_bold"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="297dp"
        android:layout_height="413dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/cerdoc" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="254dp"
        android:layout_height="249dp"
        android:layout_marginBottom="508dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cerdoderecha" />

    <EditText
        android:id="@+id/txtUsuarioRecuperar"
        android:layout_width="337dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_plaintext"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Usuario"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.472" />

    <EditText
        android:id="@+id/txtPasswordRecuperar"
        android:layout_width="337dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_plaintext"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.672" />

    <TextView
        android:id="@+id/txtParaConfirmarQueEresTu"
        android:layout_width="325dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="*Para comprobar que eres tú, escribe tu nombre de usuario."
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuarioRecuperar" />

    <TextView
        android:id="@+id/txtEscribeTuCorreo"
        android:layout_width="325dp"
        android:layout_height="38dp"
        android:fontFamily="@font/poppins"
        android:text="*Escribe tu correo electrónico.."
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordRecuperar"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/btnRecuperarContrasena"
        android:layout_width="229dp"
        android:layout_height="53dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/ic_rectangulo_morado"
        android:fontFamily="@font/poppins_bold"
        android:text="Recuperar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>